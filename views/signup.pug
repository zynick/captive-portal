extends layout

block content
    a(href=url)
        img#logo(src=logo)
    p#slogan=slogan

    br

    if data.error
        p#error=data.error

    form#signup-form(name='form', method='POST', action=data['link-login-only'])
        .form-group
            input.form-control(type='text', name='username', value=data.username, placeholder='Email')
        .form-group
            input.form-control(type='password', name='password', placeholder='Password')
        .form-group
            input.form-control(type='password', name='password2', placeholder='Confirm Password')
        .form-group
            input.form-control.btn.btn-info(name='submit', type='submit', value='SIGN UP')
        .form-group
            a(href=loginUrl) LOGIN
